{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "always"],
		"no-constant-condition": ["error", { "checkLoops": false }]
	},
	"overrides": [
		{
			"files": ["main.js"],
			"env": {
				"node": true
			}
		}
	]
}